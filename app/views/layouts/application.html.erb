<!DOCTYPE html>
<html>
<head>
  <title>Goodies</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "bootstrap", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>

<body id="store">
	<div class="navbar navbar-fixed-top">
		<div id="navbar" class="navbar-inner">
			<a class="brand" href="/"> Goodies</a>
			<div class="navbar-text pull-right">
				<ul class="nav">
				<% if current_user %>
					<li><%= link_to current_user.username, { :controller => "users", :action => "show", :id => current_user.id } %></li>
					<li class="divider-vertical"></li>
					<li><%= link_to "Log out", log_out_path %></li>
				<% else %>
					<li><%= link_to "Sign up", sign_up_path %></li>
					<li class="divider-vertical"></li>
					<li><%= link_to "Log in", log_in_path %></li>
				<% end %>
				</ul>
			</div>
		</div>
	</div>
	<div id="content">
		<div id="main-nav">
			<ul class="nav nav-pills">
				<li><%= link_to "Products", all_products_path %></li>
				<li><%= link_to "Users", all_users_path %></li>
			</ul>
		</div>
		<hr>
		<%= yield %>
	</div>
</body>
</html>
	