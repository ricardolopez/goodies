<div id="profile">
	<%= image_tag(@user.avatar.url, :class => "profile-picture") %>
	<h3><%= @user.username %></h3>
	<% if @user.first_name && @user.last_name %>
	<p><%= @user.first_name + " " + @user.last_name %></p>
	<% end %>
</div>

	
<% if current_user == @user %>
	<div class="user-edit">
		<%= link_to 'Edit Profile', edit_user_path(@user.id) %>
	</div>
<% end %>


<div id="my_products">
	<% if current_user == @user %>
		<div>
			<%= link_to "Add new product", { :controller => :products, :action => :new}, :class => "btn btn-info" %>
		</div>
	<% end %>
	<%= render :partial => 'products/list', :collection => @my_products %>
</div>
