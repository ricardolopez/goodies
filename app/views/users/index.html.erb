<% if !current_user %>
<div class="suggestions alert alert-info">Browse through other users to find new goodies!</div>
<% end %>

<%= will_paginate @users, :class => 'pagination pagination-centered' %>

<table>
	<tbody>
  <% @users.each_with_index do |user, index| %>
  <% if (index%6) == 0 %>
  	<tr>
  <% end %>
  		<td>
  			<li class="user-frame">
  			  <div class="user-image"><%= link_to image_tag(user.avatar.url), user_path(user.id) %></div>
          <div class="user-name"><%= link_to user.username, user_path(user.id) %></div>
    		</li>
    	</td>
  <% if (index%6) == 5 %>
  	</tr>
  <% end %>

  <% end %>
</tbody>
</table>

<%= will_paginate @users, :class => 'pagination pagination-centered' %>